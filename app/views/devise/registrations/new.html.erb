<h1 class="float-start">Sign Up</h1>
<%= link_to "Back", :back, class: "btn btn-outline-dark float-end mt-2" %>
<%= link_to "Log in", new_session_path(resource_name), class:"btn btn-outline-primary float-end mt-2"%>
<hr class="clear">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum", class: "form-control" %>
    
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>


  <div>
    <%= f.label :firstName, style: "display: block" %>
    <%= f.text_field :firstName, class: "form-control" %>
  </div>

  <div>
    <%= f.label :lastName, style: "display: block" %>
    <%= f.text_field :lastName, class: "form-control" %>
  </div>

  <div>
    <%= f.label :description, style: "display: block" %>
    <%= f.text_area :description, :cols => "10", :rows => "10", class: "form-control"  %>
  </div>

<% if User.count == 0 %>
  <div class="field mt-2">
    <%= f.label :role, "Attendee", class:"float-start"%>
    <%= f.radio_button :role, "attendee", :value => "attendee", checked:(resource.role == "attendee"), class:"form-check-input float-start" %>
    <%= f.label :role, "Trainer", class:"float-start" %>
    <%= f.radio_button :role, "Trainer", :value => "trainer", checked:(resource.role == "trainer"), class:"form-check-input float-start"  %>
    <%= f.label :role, "Event Organizer", class:"float-start" %>
    <%= f.radio_button :role, "event_organizer", checked:(resource.role == "event_organizer"), class:"form-check-input float-start"  %>
  </div>
  <% else %>
  <div class="field mt-2">
    <%= f.label :role, "Attendee", class:"float-start"%>
    <%= f.radio_button :role, "attendee", :value => "attendee", checked:(resource.role == "attendee"), class:"form-check-input float-start" %>
    <%= f.label :role, "Trainer", class:"float-start" %>
    <%= f.radio_button :role, "Trainer", :value => "trainer", checked:(resource.role == "trainer"), class:"form-check-input float-start"  %>
  </div>
<% end %>

  <div class="actions">
    <%= f.submit "New Account" , data: {turbo: false}, class:"btn btn-outline-success float-end mb-2"%>
  <br />
  </div>
<% end %>
<hr class="clear">


