<div class="float-start">
<h1>Dog shows</h1>
</div>
<div>
  <%= link_to "New dog show", new_dog_show_path, class:"btn btn-outline-success btn-sm float-end mt-2" %>
</div>
<hr class="clear">


<div id="dog_shows" class="table-responsive">
  <table class="table table-dark table-striped table-hover" >
    <thead>
      <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Available</th>
          <th>Price</th> 
          <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @dog_shows.each do |dog_show|%>
        <tr>
          <td><%= dog_show.name %></td>
          <td><%= dog_show.location%></td>
          <td><%= dog_show.start_time.strftime('%m/%d/%Y') %></td>
          <td><%= dog_show.end_time.strftime('%m/%d/%Y') %></td>
          <td><%= dog_show.number_of_seats %></td>
          <td><%= dog_show.price %></td>
          <td><%= link_to "Show", dog_show, class:"btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to "Edit", edit_dog_show_path(dog_show), class:"btn btn-outline-primary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

