<div id="dog_shows">
  <table class="table table-dark table-striped table-hover" >
    <thead>
      <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Available Tickets</th> <!-- This needs to be worked with ticket implementation -->
          <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @dog_shows.each do |dog_show|%>
        <% if dog_show.end_time > Date.today %> <!-- don't show shows that have already ended-->
            <tr>
                <td><%= dog_show.name %></td>
                <td><%= dog_show.location%></td>
                <td><%= dog_show.start_time %></td>
                <td><%= dog_show.end_time %></td>
                <td><%= dog_show.number_of_seats %></td>
                <td><%= link_to "Purchase Tickets", dog_show %></td>
            </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>