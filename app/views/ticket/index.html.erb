<h1>Purchase tickets to upcoming shows</h1>
<hr>
<div id="dog_shows" class="table-responsive">
  <table class="table table-dark table-striped table-hover" >
    <thead>
      <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Available Tickets</th> 
          <th>Price</th>
          <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @dog_shows.each do |dog_show|%>
        <% if dog_show.end_time > Date.today  || dog_show.number_of_seats == 0 %> <!-- don't render shows that have already ended or have 0 avaliable seats-->
            <tr>
                <td><%= dog_show.name %></td>
                <td><%= dog_show.location%></td>
                <td><%= dog_show.start_time.strftime('%m/%d/%Y') %></td>
                <td><%= dog_show.end_time.strftime('%m/%d/%Y') %></td>
                <td><%= dog_show.number_of_seats %></td>
                <td><%= dog_show.price %>
                <td><%= link_to "Purchase Tickets", new_attendee_path(dog_show_id: dog_show.id), class:"btn btn-outline-primary btn-sm" %></td>
            </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>